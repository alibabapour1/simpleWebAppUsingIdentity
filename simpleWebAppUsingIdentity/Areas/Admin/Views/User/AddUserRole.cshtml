@model simpleWebAppUsingIdentity.Areas.Admin.Models.Dtos.AddUserRoleDto

@{
    ViewData["Title"] = "AddUserRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddUserRole</h1>

<h4>AddUserRoleDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddUserRole">
            <p>
                You are adding Role to this specifing User : @Model.Fullname <br /> @Model.UserName
            </p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" asp-items="Model.Roles" class="form-control" ></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
